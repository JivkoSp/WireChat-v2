@model List<WireChat.Application.Dtos.ChatUserDto>

<div class="col mb-4 mb-md-0">

    <h5 class="side-menu font-weight-bold mb-3 text-center">Contacts</h5>

    <div class="card shadow rounded-2">
        <div id="contactsCardBody" class="card-body">

            <div class="input-group rounded mb-3">
                <input id="searchContact" type="text" class="form-control rounded"
                       placeholder="Search" onkeyup="searchContact(this.value, 
                        document.getElementById('contactList'), document.getElementById('contactsCardBody'))" />
                <span class="input-group-text border-0" id="search-addon">
                    <i class="fas fa-search text-primary"></i>
                </span>
            </div>

            <ul id="contactList" class="list-unstyled mb-0 contactListContainer">
                @foreach(var contact in Model)
                {
                    <li class="p-2 bg-body-tertiary shadow-sm">
                        <a asp-controller="Chat" asp-action="Index" asp-route-chatId="@contact.ChatId" 
                            class="d-flex justify-content-between text-decoration-none">
                            <div class="d-flex flex-row">
                                <img src="data:image/png;base64,@contact.UserPicture" alt="avatar"
                                     class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="40">
                                <div class="pt-1">
                                    <p class="fw-bold mb-0">@contact.UserName</p>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <!-- Button to Groups -->
        <button class="modern-button m-3 mb-3 w-50 text-center m-auto d-none d-sm-block" type="button" onclick="showGroupsMenu()">
            <i class="fas fa-users me-2"></i> Groups
        </button>
        <!-- Button to Groups Mobile -->
        <button class="modern-button m-3 mb-3 w-50 text-center m-auto d-block d-sm-none" type="button"
                data-bs-toggle="modal" data-bs-target="#groupsSideMenuModal" onclick="showGroupsMenu()">
            <i class="fas fa-users me-2"></i> Groups
        </button>
    </div>
</div>