@model WireChat.Application.Dtos.UserDto

<div id="userInfoModal" class="modal fade" tabindex="-1" aria-labelledby="userInfoMenuModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div id="userInfoMenuModalLabel" class="d-flex flex-row">
                    <img src="data:image/png;base64,@Model.UserPicture" alt="avatar"
                         class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="40">
                    <div class="pt-1">
                        <p class="fw-bold mb-0">@Model.UserName</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="fw-bold">First Name:</label>
                        <span class="text-black">@Model.UserFirstName</span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="fw-bold">Last Name:</label>
                        <span class="text-black">@Model.UserLastName</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="fw-bold">Email:</label>
                        <span class="text-black">@Model.UserEmail</span>
                    </div>
                </div>
                <div class="row text-center mt-4">
                    <div class="col-12 col-md-6 mb-2">
                        <div class="border-bottom border-primary">
                            <button id="userInfoAccountBtn" class="modern-button fw-bold w-100">Account</button>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="border-bottom border-primary">
                            <button id="userInfoBlockedUsersBtn" class="modern-button fw-bold w-100">Blocked Users</button>
                        </div>
                    </div>
                </div>
                <!-- Image Selection Section -->
                <div id="images-container" class="row mt-4 d-none">
                    <!-- Left Side: Image Placeholder and Save Button -->
                    <div class="col-12 col-md-4 d-flex flex-column align-items-center">
                        <div id="imagePlaceholder" class="border p-3" style="width: 200px; height: 200px;">
                            <!-- Placeholder Image -->
                            <img id="selectedImage" src="data:image/png;base64,@Model.UserPicture" alt="Selected Image" class="img-fluid">
                        </div>
                        <button id="saveImageBtn" class="modern-button text-primary mt-3">Save</button>
                    </div>

                    <!-- Right Side: Image Grid -->
                    <div class="col-12 col-md-8">
                        <div id="userImages" class="row">
                            <!-- Images from the RoboHash API -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>