@model WireChat.Application.Dtos.ChatUserDto

<div class="container mt-1 mb-2">
    <button class="modern-button mb-1" data-bs-toggle="modal" data-bs-target="#contactModal">
        <div class="d-flex flex-row">
            <i class="fas fa-chevron-right mt-3 me-1"></i>
            <img src="data:image/png;base64,@Model.UserPicture" alt="avatar"
                 class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="40">
            <div class="pt-1">
                <p class="fw-bold mb-0">@Model.UserName</p>
            </div>
        </div>
    </button>
</div>

<div id="contactModal" class="modal fade" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">
                    <span class="d-flex flex-row">
                        <img src="data:image/png;base64,@Model.UserPicture" alt="avatar"
                             class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="40">
                        <span class="pt-1">
                            <span class="fw-bold mb-0">@Model.UserName</span>
                        </span>
                    </span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
            </div>
        </div>
    </div>
</div>