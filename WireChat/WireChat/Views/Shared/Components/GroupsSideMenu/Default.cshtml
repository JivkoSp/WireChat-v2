@model List<WireChat.Application.Dtos.GroupDto>

<div class="col mb-4 mb-md-0">

    <h5 class="side-menu font-weight-bold mb-3 text-center">Groups</h5>

    <div class="card shadow rounded-2 h-75 overflow-auto">
        <div class="card-body">

            <div class="input-group rounded mb-3">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                       aria-describedby="search-add on" />
                <span class="input-group-text border-0" id="search-addon">
                    <i class="fas fa-search text-primary"></i>
                </span>
            </div>

            <ul class="list-unstyled mb-0">
                @foreach (var group in Model)
                {
                    <li class="p-2 bg-body-tertiary shadow-sm">
                        <a asp-controller="Chat" asp-action="Index" asp-route-chatId="@group.ChatDto.ChatId"
                           class="d-flex justify-content-between">
                            <div class="d-flex flex-row">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-8.webp" alt="avatar"
                                     class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="40">
                                <div class="pt-1">
                                    <p class="fw-bold mb-0">@group.GroupName</p>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <!-- Button to Contacts -->
        <button id="contacts" class="modern-button m-3 mb-3 w-50 text-center m-auto d-none d-sm-block" type="button" onclick="showContactsMenu()">
            <i class="fas fa-address-book me-2"></i> Contacts
        </button>
        <!-- Button to Contacts Mobile -->
        <button id="contacts" class="modern-button m-3 mb-3 w-50 text-center m-auto d-block d-sm-none" type="button" onclick="showContactsMenu()"
                data-bs-toggle="modal" data-bs-target="#contactsSideMenuModal">
            <i class="fas fa-address-book me-2"></i> Contacts
        </button>
    </div>
</div>